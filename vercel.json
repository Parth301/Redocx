{
    "version": 2,
    "builds": [
        {
            "src": "api/format.js",
            "use": "@vercel/node"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/format.js"
        },
        {
            "src": "/(.*\\.(js|css|json|png|jpg|svg|ico))",
            "dest": "/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}
